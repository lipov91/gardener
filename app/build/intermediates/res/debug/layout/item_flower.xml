<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/flower_description"/>

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivPicture"
        android:layout_centerVertical="true"
        android:text="@string/flower_description"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

</RelativeLayout><!-- From: file:/C:/Users/Jan%20Lipka/AndroidStudioProjects/Gardener/app/src/main/res/layout/item_flower.xml -->